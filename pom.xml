			</properties>
		</profile>
		<profile>
			<id>stage-site</id>
			<properties>
				<!-- stage the site in the /test folder on sourceforge -->
				<site.deploy.url>scp://shell.sourceforge.net/home/groups/f/fl/flatpack/htdocs/test</site.deploy.url>
			</properties>
		</profile>

	</profiles>

